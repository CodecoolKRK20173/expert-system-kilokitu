<Rules>
    <Rule id="money">
        <Question>Are money an issue?</Question>
        <Answer>
            <Selection value="true">
                <SingleValue value="no"/>
            </Selection>
            <Selection value="false">
                <SingleValue value="yes"/>
            </Selection>
        </Answer>
    </Rule>
